doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
    body 
    h1= message
    form(class="container text-center", action="/login", method="POST", style="background-color:#99ffff;")
      div(class="card")
        div(class="card-header" style="background-color:#ccffff;")
          h2(class="display-5") Veuillez saisir
        div(class="card-body" style="background-color:#99ffff;") 
            span.label code utilisateur: 
            input(name="username") 
            span.label &#160&#160mot de passe: 
            input(name="password") 
            if section === "admin"
              span.label &#160&#160Administration:
              input(type="radio", id="admin", name="type_compte", value="administration", checked, disabled)
            if section === "client"
              span.label &#160&#160Client: 
              input(type="radio", id="client", name="type_compte", value="client", checked, disabled)
            input(name="submit", type="submit") 